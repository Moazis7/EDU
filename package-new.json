{
  "name": "edu-backend-professional",
  "version": "2.0.0",
  "description": "Professional educational platform backend with modern architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "echo 'No build step required for Node.js'",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install",
    "docker:build": "docker build -t edu-backend .",
    "docker:run": "docker run -p 3009:3009 edu-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "docs": "jsdoc -c jsdoc.json",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "education",
    "platform",
    "backend",
    "nodejs",
    "express",
    "mongodb",
    "professional",
    "architecture",
    "design-patterns"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.37.0",
    "dotenv": "^16.3.1",
    "debug": "^4.3.4",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "jsdoc": "^4.0.2",
    "@types/jest": "^29.5.4",
    "faker": "^5.5.3",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/edu-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/edu-backend/issues"
  },
  "homepage": "https://github.com/yourusername/edu-backend#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
} 